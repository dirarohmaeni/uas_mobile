<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/welcome_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_light_green"
    tools:context=".WelcomeActivity">

    <!-- Decorative Icons -->

    <ImageView
        android:id="@+id/ic_top_right"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="640dp"
        android:layout_marginEnd="140dp"
        android:alpha="0.9"
        android:src="@drawable/streamline_drug" />

    <ImageView
        android:id="@+id/ic_bottom_left"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginBottom="122dp"
        android:alpha="0.9"
        android:src="@drawable/suntikan" />

    <ImageView
        android:id="@+id/ic_bottom_right"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="135dp"
        android:alpha="0.9"
        android:src="@drawable/ic_health" />

    <!-- Center Block -->

    <LinearLayout
        android:id="@+id/center_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <TextView
            android:id="@+id/tv_welcome_big"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_full"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textColor="@color/green_dark"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <Button
            android:id="@+id/btn_refresh_loc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refresh_location"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <!-- Location Button -->

    <LinearLayout
        android:id="@+id/btn_location"
        android:layout_width="92dp"
        android:layout_height="28dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/kolom_1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="6dp"
        android:paddingEnd="6dp">

        <ImageView
            android:id="@+id/iv_flag_small"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/indonesia"
            android:contentDescription="@string/flag_icon_desc" />

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country_indonesia"
            android:textColor="#4F4F4F"
            android:textSize="10sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginStart="4dp" />
    </LinearLayout>

</RelativeLayout>
